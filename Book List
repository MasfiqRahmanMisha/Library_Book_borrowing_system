public void table(){
        try{
            String sql = "Select * from books";
            pst= conn.prepareStatement(sql);
            rs = pst.executeQuery();
            jTable1.setModel(DbUtils.resultSetToTableModel(rs));                  
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, e);
        }
        
    }

