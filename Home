    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
        DefaultTableModel tmodel = (DefaultTableModel)jTable1.getModel();
        int selectrowintex = jTable1.getSelectedRow();
        nameField.setText(tmodel.getValueAt(selectrowintex, 1).toString());
        writerField.setText(tmodel.getValueAt(selectrowintex, 2).toString());
        yearField.setText(tmodel.getValueAt(selectrowintex, 3).toString());
        amountField.setText(tmodel.getValueAt(selectrowintex, 4).toString());
        locationField.setText(tmodel.getValueAt(selectrowintex, 5).toString());
    }                                    

    private void DeleteActionPerformed(java.awt.event.ActionEvent evt) {                                       
        try{
           String sql = "delete from books where name=?";
           pst = conn.prepareStatement(sql);
           pst.setString(1, searchField.getText());
           
           pst.execute();
            table();
           JOptionPane.showMessageDialog(null, "one user deleted");
       }catch(Exception e){
           JOptionPane.showMessageDialog(null, e);
      
       }
        // TODO add your handling code here:
    }                                      

