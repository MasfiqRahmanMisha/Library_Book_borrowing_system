    private void AddActionPerformed(java.awt.event.ActionEvent evt) {                                    
        try{
            String sql = "insert into books(name,writer,publishingYear,amount,location) value(?,?,?,?,?)";
            pst = conn.prepareStatement(sql);
            pst.setString(1, nameField.getText());
            pst.setString(2, writerField.getText());
            pst.setString(3, yearField.getText());
            pst.setString(4, amountField.getText());
            pst.setString(5, locationField.getText());
            pst.execute();
            JOptionPane.showMessageDialog(null, "Book Added Successfully");
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, e);
        }
    }                                   

